<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <script language="javascript" type="text/javascript">
        function windowClose() {
            window.open('', '_parent', '');
            window.close();
        }
        function goBack() {
            window.history.back();
        }
    </script>
</head>
<style>
    .pageContent {
        width: 100%;
        height: 100%;
        background-color: #272727;
    }

    .centerContent {
        background-color: #272727;
        position: absolute;
        height: 300px;
        width: 100%;
        top: 35%;
        left: 0%;
    }

    .textContent {
        color: white;
        position: absolute;
        text-align: center;
        top: 25%;
        left: 0;
        width: 100%;
        font-size: 30px;
        font-family: 'Century Gothic', CenturyGothic, AppleGothic, Futura, sans-serif;
        letter-spacing: -1px;
    }

    input.MyButton {
        width: 200px;
        padding: 20px;
        cursor: pointer;
        font-size: 80%;
        background: #021b52;
        color: #fff;
        border: 1px solid #272727;
        border-radius: 10px;
    }

    input.MyButton:hover {
        color: #fff;
        background: #021b52;
        border: 1px solid #fff;
    }
</style>
</head>

